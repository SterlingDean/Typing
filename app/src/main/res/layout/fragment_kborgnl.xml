<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment.KBOrgnlFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cusGray">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:text="original"
            app:layout_constraintEnd_toStartOf="@+id/s_emoji"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <ImageButton
            android:id="@+id/s_emoji"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/emoji"
            app:layout_constraintEnd_toStartOf="@+id/imageButton5"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/white"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/kb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/white"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search"
            app:layout_constraintStart_toEndOf="@+id/imageButton5"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/white"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/down"
            app:layout_constraintStart_toEndOf="@+id/imageButton6"
            app:layout_constraintTop_toBottomOf="@id/view3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/s_sign"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <Button
            android:layout_width="55dp"
            android:layout_height="38dp"
            android:background="@color/defGray"
            android:text="@string/sign1"
            android:textSize="20sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="38dp"
            android:background="@color/defGray"
            android:text="@string/sign2"
            android:textSize="20sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="38dp"
            android:background="@color/defGray"
            android:text="@string/sign3"
            android:textSize="20sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="38dp"
            android:background="@color/defGray"
            android:text="@string/sign4"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/s_sign"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/defGray"
        android:text="@string/sign"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <FrameLayout
            android:id="@+id/typing_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<include layout="@layout/fragment_seng" />-->
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/s_num"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:background="@color/defGray"
                android:text="@string/num"
                android:textSize="20sp" />

            <Button
                android:id="@+id/kborgnl_space_0"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/defGray"
                android:text="@string/space"
                android:textSize="20sp" />

            <Button
                android:id="@+id/kborgnl_zero"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/white"
                android:text="@string/num0"
                android:textSize="20sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/s_chin_eng"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:background="@color/defGray"
                android:text="@string/chin"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:background="@color/defGray"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/del" />

        <Button
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/defGray"
            android:text="@string/clr"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/kborgnl_voice"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:background="@color/defGray"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/voice" />

        <Button
            android:id="@+id/kborgnl_space_1"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:background="@color/defGray"
            android:text="@string/space"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/cusBlue"
            android:text="@string/send"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
